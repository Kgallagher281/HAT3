<div class="header" id="top">
  <h1>HAT3</h1>
  <i class="fa fa-angle-down animated bounce"></i>
</div>

<% @posts.each do |post| %>
<div class="section animate">
  <div class="middle">
      <%= image_tag post.photo.url(:large), class: "img" %>
  </div>
  <div class="left title">
    <div class="content">
      <p><%= link_to 'Show', post %></p>
      <h2><%= post.title %></h2>
    </div>
  </div>
  <div class="right tiles">
    <%= image_tag post.photo.url(:medium), class: "img" %>
    <%= image_tag post.photo.url(:medium), class: "img" %>
    <%= image_tag post.photo.url(:medium), class: "img" %>
    <%= image_tag post.photo.url(:medium), class: "img" %>
  </div>
</div>
<% end %>

<br>

<%= link_to 'New Post', new_post_path %>
