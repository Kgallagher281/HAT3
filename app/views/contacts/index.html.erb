<body class="contact">
<p id="notice"><%= notice %></p>

<h1>Contact Us</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.us %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>




<div class="form">
    <form method="POST" action="http://formspree.io/kevin.gallagher23@gmail.com">
    <button type="button" class="close" data-dismiss="modal">&times;</button><br>
    <h2 style="color: black;">Want to Learn More?</h2><br>
    First name:<br>
    <input type="text" name="firstname"><br>
    Last name:<br>
    <input type="text" name="lastname"><br>
    Email:<br>
    <input type="text" name="email"><br>
    Message:<br>
    <input style="height: 40px;" type="text" name="message">
    <br>
    <input type="submit" value="submit">
</form>
</div>
</body>